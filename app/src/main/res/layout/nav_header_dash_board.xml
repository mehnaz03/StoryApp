<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/giphy"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/_10sdp"
>

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Story Times"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_22sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignStart="@+id/tvHeaderTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mehnaz Hossain"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_16sp"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_70sdp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Since:4 september,2019"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_below="@id/textView"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignStart="@+id/textView"
        android:text="View: 200 Times"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginStart="@dimen/_80sdp"
        android:text="Story: 20"
        android:textColor="@color/colorWhite" />


</RelativeLayout>
