<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_margin="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Story Title"
            android:layout_marginStart="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_18sp"/>

        <TextView
            android:id="@+id/tvReadersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@id/tvTitle"
            android:text="Read by: Mehnaz Hossain"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tvStoryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvReadersName"
            android:text="Story type: Educational"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvStoryType"
            android:layout_marginTop="0dp"
            android:text="Date:4 Septemeber,2019"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            app:srcCompat="@drawable/ic_more_horiz"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>


</android.support.v7.widget.CardView>